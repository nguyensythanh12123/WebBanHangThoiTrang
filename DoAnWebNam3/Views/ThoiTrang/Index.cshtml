@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/LayOutChung.cshtml";
}
@using DoAnWebNam3.Models
@model List<SanPham>



<div id="caruoselcontrol" class="carousel mx-auto container" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" >
                <img src="~/Image/caro1.jpg" class="d-block w-100" alt="ảnh 1" />
            </div>
            <div class="carousel-item" >
                <img src="~/Image/caro2.jpg" class="d-block w-100" alt="ảnh 2" />
            </div>
            <div class="carousel-item" >
                <img src="~/Image/caro3.jpg" class="d-block w-100" alt="ảnh 3" />
            </div>
            <div class="carousel-item" >
                <img src="~/Image/caro4.jpg" class="d-block w-100" alt="ảnh 3" />
            </div>
            @*<div class="carousel-item" >
                <img src="" class="d-block w-100" alt="ảnh 3" />
            </div>*@
        </div>
        <a class="carousel-control-prev" href="#caruoselcontrol" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#caruoselcontrol" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<h4 class="display-4 container justify-content-between align-items-center">Sản Phẩm Nổi Bật</h4>
<br />
<br />
<div class="product-group container">
    <div class="row">
        @foreach (SanPham s in Model)
        {
            <div class="col-lg-3">
              <div class="card mb-4 box-shadow">
                  <a href="@Url.Action("Deatails", "ThoiTrang", new { msp = s.MaSP })">
                <img class="card-img-top" src="~/Image/@s.Anh" style="height: 330px; width: 100%; display: block;" data-holder-rendered="true"/></a>
                <div class="card-body" style="text-decoration:none">
                  <h5 class="card-title" style="font-size:16px">@s.TenSP</h5>
                   <p class="card-text"><b style="color:red;font-size:20px">@s.GiamGia đ</b>&nbsp;&nbsp;&nbsp;<b style="color:blue;font-size:16px; text-decoration:line-through">@s.GiaBan đ</b></p>
                  <div class="d-flex justify-content-between align-items-center float-right">
                    <div class="btn-group">
                        @Html.ActionLink("Chi tiết", "Deatails", "ThoiTrang", new {msp=@s.MaSP }, new { @class = "btn btn-sm btn-outline-success" })
                        <a href="@Url.Action("ThemMatHang", "DatHang", new {msp=@s.MaSP })" class="btn btn-sm btn-outline-success"><i class="fa fa-cart-plus"></i></a>
                    </div>
                  </div>
                </div>
                   
              </div>
            </div>
        }       
    </div>
</div>
            
