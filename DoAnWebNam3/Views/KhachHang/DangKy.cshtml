@model DoAnWebNam3.Models.KhachHang

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Share/LayOutChung.cshtml";
}

<br />
<div style="margin-left:10%; margin-right:10%">
<h2>Đăng Ký</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <br />
    <div class="registration-form">
        <div class="form">
    <div class="form-group">
        <label><b>Tên khách hàng</b></label>
        <input class="form-control item" type="text" placeholder="Enter Name" name="TenKH" required/>
        </div><br />
      
    <div class="form-group">
        <label><b>Ngày sinh</b></label>
        @*<input class="form-control item" type="text" placeholder="Enter Name" name="ngaysinh" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" required/>
        <br />*@
        <input class="form-control" type="date" name="NgaySinh" style="width:100%" required>    
    </div><br />


      <div class="form-group">
        <label><b>Số điện thoại</b></label>
        <input class="form-control item" type="text" placeholder="Enter Name" name="SDT" required/>
        </div><br />

     <div class="form-group">
        <label><b>Địa chỉ</b></label>
        <input class="form-control item" type="text" placeholder="Enter Address" name="DiaChi" required/>
        </div><br />
                
      <div class="form-group">
        <label><b>Email</b></label>
          <input class="form-control item" type="email" name="email" id="Email" placeholder="Example@gmail.com" required>

        </div><br />

      <div class="form-group">
        <label><b>Tên đăng nhập</b></label>
        <input class="form-control item" type="text" placeholder="Enter TenDN" name="TenDN" required/>
        <p style="font-size:11px; color:red">@ViewData["Loi6"]</p>
        </div><br />

      <div class="form-group">
        <label><b>Mật khẩu</b></label>
          <input class="form-control item" type="password" name="Pass" id="password" placeholder="Password" pattern=".{,8}"
              title="Mật khẩu tối đa 8 kí tự" required/>
        </div><br />

      <div class="form-group">
        <label><b>Xác nhận mật khẩu</b></label>
        <input class="form-control item" type="password" name="repassword" id="repassword" placeholder="Password" onkeyup="xacnhanMK()" title="Mật khẩu tối đa 8 kí tự" required/>
        <p id="mess" style="font-size:11px"></p>
      
      <label>
        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px" /> Remember me
      </label>
    <br />
      <div class="clearfix">
        <input type="button" value="Cancel" class="btn btn-danger" style="width:49%"/>
        <input type="submit" value="Sign Up" id="btn" class ="btn btn-success" style="width:49%; float:right">         

      </div>
        </div>
        </div>
        <script type="text/javascript">
            function xacnhanMK() {
                var txtpass = document.getElementById('password').value;
                var txtrepass = document.getElementById('repassword').value;
                if (txtpass == txtrepass) {
                    document.getElementById('mess').innerHTML = "Trùng Khớp";
                    document.getElementById('mess').style.color = "Green";
                }
                else {
                    document.getElementById('mess').innerHTML = "Mật Khẩu Không Trùng Khớp";
                    document.getElementById('mess').style.color = "Red";
                }
            }
        </script>
        </div>
}
</div>
<br />
<br />
<br />
