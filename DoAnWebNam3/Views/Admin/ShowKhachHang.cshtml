@{
    ViewBag.Title = "ShowKhachHang";
    Layout = "~/Views/Share/_LayoutAdmin.cshtml";
    <link href="~/CSS/Style1.css" rel="stylesheet" /> 
}
@using DoAnWebNam3.Models;
@model List<KhachHang>

<h2 class="container">Danh Sách Quản Lý Khách Hàng</h2>
<table class="table table-bordered" style="width:100%">
    <tr>
       <th>Mã KH</th>
        <th>Tên KH</th>
        <th>Ngày Sinh</th>
        <th>SĐT</th>
        <th>Địa Chỉ</th>
        <th>Email</th>
        <th>Tên ĐN</th>
        <th>Password</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
             @Html.DisplayFor(modelItem => item.TenDN)
        </td>
         <td>
             @Html.DisplayFor(modelItem => item.Pass)
        </td>
    </tr>
}

</table>
<h2>Có tất cả gồm:@ViewBag.tb</h2>
